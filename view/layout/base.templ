package layout

import "jeffcaldwell.is/view/component"

templ Base(title, current, remoteAddr string) {
	<!DOCTYPE html>
	<html lang="en">
		<head>
			<meta charset="UTF-8"/>
			<meta name="viewport" content="width=device-width, initial-scale=1.0"/>
			<link rel="stylesheet" href="/public/style/main.css"/>
			<title>{ title }</title>
		</head>
		<body>
			@component.Header(current)
			<main>
				{ children... }
			</main>
			@component.Footer(remoteAddr)
		</body>
	</html>
}
