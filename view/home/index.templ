package home

import (
	"jeffcaldwell.is/view/component"
	"jeffcaldwell.is/view/layout"
	"jeffcaldwell.is/model"
)

templ Index(current string, posts []*model.Post) {
	@layout.Base("Jeff Caldwell's new page", current) {
		<section class="post-list-section content-container">
			<div class="section-header highlight">
				<h2>Latest Posts</h2>
			</div>
			for _, post := range posts {
				@component.PostPreview(post)
			}
		</section>
	}
}
