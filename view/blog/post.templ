package blog

import (
	"jeffcaldwell.is/model"
	"jeffcaldwell.is/view/layout"
	"jeffcaldwell.is/view/component"
)

templ Post(post *model.Post, current, remoteAddr string) {
	@layout.Base("Jeff Caldwell â€” A post!", current, remoteAddr) {
		<section class="post content-container">
			<h1>{ post.Title }</h1>
			@component.FormattedDateTime(post.PubDate)
			<p class="highlight">{ post.Summary }</p>
			// <slot></slot>
			@templ.Raw(post.Content)
		</section>
	}
}
